{
  "name": "vscode-ascii-agent",
  "displayName": "ASCII Agent",
  "description": "Auto-generates and keeps an ASCII file-tree and a Copilot-powered architecture data-flow diagram up to date as your codebase changes. Requires GitHub Copilot Chat.",
  "version": "0.0.5",
  "publisher": "johnraymonmendez",
  "repository": {
    "type": "git",
    "url": "https://github.com/john-raymon/vscode-ascii-agent-extension"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.asciirc.json",
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "asciiAgent.initialize",
        "title": "ASCII Agent: Initialize"
      },
      {
        "command": "asciiAgent.generateNow",
        "title": "ASCII Agent: Generate Now"
      },
      {
        "command": "asciiAgent.toggleAutoWatch",
        "title": "ASCII Agent: Toggle Auto-Watch"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node esbuild.mjs --production",
    "compile": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "package:vsix": "vsce package",
    "release:patch": "npm version patch && npm run package:vsix",
    "release:minor": "npm version minor && npm run package:vsix",
    "release:major": "npm version major && npm run package:vsix",
    "lint": "eslint src/",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.93.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.24.0",
    "typescript": "^5.5.0"
  }
}
